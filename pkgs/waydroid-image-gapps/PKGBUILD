_pkgver_images_system="18.1-20230916"
_pkgver_images_vendor="18.1-20230916"
_pkgver_images_system_x86="18.1-20230916"
_pkgver_images_vendor_x86="18.1-20230916"
pkgname=waydroid-image-gapps
pkgver="${_pkgver_images_system//-/_}"
pkgrel=1
pkgdesc="LineageOS-based Android images for Waydroid, with GAPPS."
arch=('x86_64')
url='https://waydro.id'
license=('Apache')
optdepends=('waydroid')
provides=('waydroid-image')
_srcprefix="https://sourceforge.net/projects/waydroid/files/images"
source_x86_64=("$_srcprefix/system/lineage/waydroid_x86_64/lineage-$_pkgver_images_system-GAPPS-waydroid_x86_64-system.zip"
  "$_srcprefix/vendor/waydroid_x86_64/lineage-$_pkgver_images_vendor-MAINLINE-waydroid_x86_64-vendor.zip")
sha256sums_x86_64=('59c825234ed6cb72030367fec9d63835b02f076059aaa0af47b91c52494b9f43'
                   '504aa3ce973ed2a7622b8c7a40e6ea7f08071248ee08d97546181410ea0900dd')

package() {
	install -Dm644 {system,vendor}.img -t "$pkgdir/usr/share/waydroid-extra/images/"
}


